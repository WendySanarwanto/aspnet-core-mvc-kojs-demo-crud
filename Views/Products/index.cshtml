@model aspnet_core_mvc_kojs_demo_crud.ViewModels.ProductsListViewModel
@using Newtonsoft.Json
@{
    ViewData["Title"] = "Products List - CRUD Page";
    var jsonSerialiserSettings = new JsonSerializerSettings {StringEscapeHandling = StringEscapeHandling.EscapeHtml};
}

<section class="container">
    <h2 class="">Products List 
        <small class="text-muted">with CRUD</small>
    </h2>

    <div class="container-fluid" style="border: 1px solid #eee">
        <div class="row">
            <div class="col-md-1 text-center list-heading">
                <strong>#</strong>
            </div>
            <div class="col-md-6 text-center list-heading">
                <strong>Name</strong>
            </div>
            <div class="col-md-3 text-center list-heading">
                <strong>Price</strong>
            </div>
            <div class="col-md-1 text-center list-heading">
                <strong>Quantity</strong>
            </div>
            <div class="col-md-1 text-center list-heading"></div>
        </div>
        <div data-bind="template: { name: 'product_template', foreach: filteredProducts }">
        </div>
    </div>
    <div class="text-right" style="margin-top: 1em;">
        <button type="button" class="btn btn-success" title="Submit to Server" data-bind="click: doSubmit">
            <i class="fa fa-cloud-upload-alt"></i>&nbsp;&nbsp;Submit
        </button>
        <button type="button" class="btn btn-primary" title="Add a new Product on list" data-bind="click: addNewProduct">
            <i class="fa fa-plus-square"></i>&nbsp;&nbsp;Add
        </button>
    </div>
</section>
<script type="text/html" id="product_template">
    <div class="row">
        <div class="col-md-1 text-center list-cell">
            @Html.Label(string.Empty, string.Empty, new { @data_bind = "text: Number", @style = "margin-top: 1em" })
            <!-- <label data-bind="text: Number" style="margin-top: 1em"></label> -->
        </div>
        <div class="col-md-6 list-cell">
            @Html.TextBox("ProductName", null, new { @class = "form-control", @data_bind = "value: Name", @style = "margin-top: 0.3em", @aria_label = "Product's Name" })
            <!-- <input type="text" style="margin-top: 0.3em" class="form-control" aria-label="Product's Name" data-bind="value: Name"/> -->
        </div>
        <div class="col-md-3 list-cell">
            <div class="input-group" style="margin-top: 0.3em" >
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                @Html.TextBox("Price", null, new { @class = "form-control", @data_bind = "value: Price", @aria_label = "Amount (to the nearest dollar)" })
                <!-- <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" data-bind="value: Price"/> -->
            </div>
        </div>
        <div class="col-md-1 list-cell">
            @Html.TextBox("Quantity", null, new { @class = "form-control", @data_bind = "value: Price", @style="margin-top: 0.3em", @aria_label = "Amount (to the nearest dollar)" })
            <!-- <input type="text" style="margin-top: 0.3em"  class="form-control" aria-label="Quantity in Pieces" data-bind="value: Quantity"/> -->
        </div>
        <div class="col-md-1 text-center list-cell">
            <button type="button" class="btn btn-danger" title="Delete" style="margin-top: 0.5em" data-bind="click: $parent.removeProduct">
                <i class="fa fa-trash-alt"></i>
            </button>
        </div>
    </div>
</script>
@section scripts{
    <script type="text/javascript">
        var model = @Html.Raw(@Json.Serialize(ViewData.Model, jsonSerialiserSettings));
        var productsVm = new ProductsViewModel(model);
        ko.applyBindings(productsVm);
    </script>
}